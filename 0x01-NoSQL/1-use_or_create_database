#!/usr/bin/env python3

"""
Script to create or use the database my_db in MongoDB.
"""

import pymongo

def create_or_use_database(database_name):
    """
    Function to create or use the database my_db in MongoDB.
    
    Args:
    - database_name: Name of the database to create or use.
    """
    # Connect to MongoDB
    client = pymongo.MongoClient("mongodb://localhost:27017/")
    
    # Access or create the specified database
    db = client[database_name]
    
    # Print the name of the database being used
    print(f"switched to db {database_name}")

if __name__ == "__main__":
    create_or_use_database("my_db")
